@{
    ViewData["Title"] = "Signup - Restaurant";
}

<br />
<main>
    <section>
        <h2 class="text-center text-decoration-underline">Restaurant Signup.</h2> <br />


        <form method="POST" action="">
            <div class="mb-3">
                <label for="ResName" class="form-label">Restaurant Name*</label>
                <input type="text" class="form-control" id="ResName" name="ResName" value="@Model.ResName">
                <span class="text-danger">@Html.ValidationMessage("ResName")</span>
            </div>


            <div class="mb-3">
                <label for="Email" class="form-label">Email Address*</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
                <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password*</label>
                <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
                <span class="text-danger">@Html.ValidationMessage("Password")</span>
            </div>

            <div class="mb-3">
                <label for="Address" class="form-label">Address*</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                <span class="text-danger">@Html.ValidationMessage("Address")</span>
            </div>

            <br />
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="submit">Signup</button>
            </div>

            <br /><p>Have an Account? <a href="/Restaurant/Login">Login Here</a></p>
        </form>

    </section>
</main>
