@{
    ViewData["Title"] = "Add Employees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<main>
    <section>
        <h2 class="text-center text-decoration-underline">Add New Employee.</h2> <br />


        <form method="POST" action="">
            <div class="mb-3">
                <label for="EmpName" class="form-label">Employee Name*</label>
                <input type="text" class="form-control" id="EmpName" name="EmpName" value="@Model.EmpName">
                <span class="text-danger">@Html.ValidationMessage("EmpName")</span>
            </div>


            <div class="mb-3">
                <label for="Email" class="form-label">Email Address*</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
                <span class="text-danger">@Html.ValidationMessage("Email")</span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password*</label>
                <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
                <span class="text-danger">@Html.ValidationMessage("Password")</span>
            </div>

            <div class="mb-3">
                <label for="Salary" class="form-label">Salary*</label>
                <input type="number" step="0.1" class="form-control" id="Salary" name="Salary" value="@Model.Salary">
                <span class="text-danger">@Html.ValidationMessage("Salary")</span>
            </div>

            <div class="mb-3">
                <label for="Address" class="form-label">Address*</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                <span class="text-danger">@Html.ValidationMessage("Address")</span>
            </div>

            <br />
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="submit">Add</button>
            </div>
        </form>

    </section>
</main>



